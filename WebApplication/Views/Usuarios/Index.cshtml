@model IEnumerable<WebApplication.Models.Usuarios>

@{
    Layout = Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">


    <p>
        @Html.ActionLink("Nuevo", "Create", null, htmlAttributes: new { @class = "btn btn-outline-primary" })
    </p>
    <table class="table table-striped border">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.id_usuario)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.nombre_usuario)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.apellido_usuario)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.estado_usuario)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Perfiles.nombre_perfil)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.id_usuario)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.nombre_usuario)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.apellido_usuario)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.estado_usuario)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Perfiles.nombre_perfil)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.login_usuario }) |
                    @Html.ActionLink("Details", "Details", new { id = item.login_usuario }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.login_usuario })
                </td>
            </tr>
        }

    </table>

</div>