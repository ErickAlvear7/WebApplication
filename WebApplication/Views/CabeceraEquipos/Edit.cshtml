@model WebApplication.Models.CabeceraEquipos

@{
    ViewBag.Title = "Edit";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="container">

        <form class="form-horizontal" role="form">
            <div class="form-group col-md-12">
                @Html.HiddenFor(model => model.id_cabecera)
                <div class="container">
                    <div id="accordion">
                        <div class="card">
                            <div class="card-header" id="headingOne">
                                <h5 class="mb-0">

                                    <span class="label label-primary" data-toggle="collapse" data-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne"><span style="color:blue">Parametro</span> <i class="fas fa-chevron-down"></i></span>
                                </h5>
                            </div>

                            <div id="collapseOne" class="collapse" aria-labelledby="headingOne" data-parent="#accordion">
                                <div class="card-body">
                                    <div class="panel panel-default">
                                        <div class="panel-body">
                                            <div class="form-group">
                                                <label>Parámetro</label>
                                                @Html.EditorFor(model => model.nombre_cabecera, new { htmlAttributes = new { @class = "form-control", @maxLength = "80", @id = "txtParametro", style = "text-transform:uppercase;" } })
                                                <span id="error_parametro" class="text-danger"></span>
                                            </div>
                                            <div class="form-group">
                                                <label>Descripción</label>
                                                <textarea name="descrip" id="txtDescripcion" class="form-control" maxlength="200" onkeydown="return (event.keyCode!=13);">@ViewBag.Descripcion</textarea>
                                            </div>
                                        </div>

                                    </div>
                                </div>
                            </div>

                        </div>
                        <div class="card">
                            <div class="card-header" id="headingOne">
                                <h5 class="mb-0">
                                    <span class="label label-primary" data-toggle="collapse" data-target="#collapseTwo" aria-expanded="true" aria-controls="collapseTwo">Detalle <i class="fas fa-chevron-down"></i></span>
                                </h5>
                            </div>

                            <div id="collapseTwo" class="collapse" aria-labelledby="headingOne" data-parent="#accordion">
                                <div class="card-body">
                                    <div class="panel panel-default">
                                        <div class="panel-body">
                                            <div align="right" style="margin-bottom:5px;">
                                                <button type="button" class="btn btn-outline-primary" id="btnAdd"><i class='fas fa-plus'></i> </button>
                                            </div>
                                            <br />
                                            <div class="table-responsive">
                                                <table id="tblParameter" class="table table-striped table-border table-condensed" style="width: 100%;">
                                                    <thead>
                                                        <tr>
                                                            <th style="display: none;">NOrden</th>
                                                            <th>Detalle</th>
                                                            <th>Codigo Texto</th>
                                                            <th>Codigo Entero</th>
                                                            <th>Estado</th>
                                                            <th>Acciones</th>
                                                        </tr>
                                                    </thead>
                                                    <tbody>
                                                        @{
                                                            foreach (var item in Model.DetalleEquipos)
                                                            {
                                                                <tr>                                                                
                                                                    <td>
                                                                        @Html.DisplayFor(modelItem => item.nombre_detalle)
                                                                    </td>

                                                                    <td>
                                                                        @Html.DisplayFor(modelItem => item.valor_detalle)
                                                                    </td>

                                                                    <td>
                                                                        @Html.DisplayFor(modelItem => item.valor_detallei)
                                                                    </td>                                

                                                                    <td>
                                                                        @Html.DisplayFor(modelItem => item.estado_detalle)
                                                                    </td>

                                                                    <td>
                                                                        <button id="btnEditar" class="btn btn-outline-info btn-sm ml-3"><i class="fas fa-edit"></i></button>

                                                                        <button id="btnEliminar" class="btn btn-outline-danger btn-sm ml-3"><i class="fas fa-trash-alt"></i></button>

                                                                    </td>
                                                                </tr>
                                                            }
                                                        }
                                                    </tbody>
                                                </table>
                                            </div>
                                        </div>

                                    </div>

                                </div>
                            </div>

                        </div>
                    </div>
                </div>

            </div>
            <div align="center">
                <button type="button" class="btn btn-outline-primary" id="btnRegresar">Regresar</button>
                <button type="button" class="btn btn-outline-success" id="btnSave">Guardar</button>
            </div>
        </form>
    </div>


 }

@section scripts{
    <script src="~/JQuery/Cabecera.js"></script>
}

