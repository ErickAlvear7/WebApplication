@model IEnumerable<WebApplication.Controllers.ConexionDTO.Cabecera>

@{
    Layout = Layout = "~/Views/Shared/_Layout.cshtml";
    <title>@ViewBag.Title</title>
}



<div class="container">
    <div class="well well-lg">
        <a class="btn btn-outline-primary" href="/CabeceraEquipos/Create"><i class="fas fa-user-plus"></i></a>
    </div>
    <br/>

    <table id="tabla" class="table table-bordered table-hover">

        <thead class="text-center">
            <tr>
                <th style="display:none;">CabeceraId</th>
                <th>Parametro</th>
                <th>Descripcion</th>
                <th>Estado</th>
                <th>Opciones</th>
            </tr>

        </thead>

        <tbody class="text-center">

            @foreach (var item in Model)
            {
            <tr>
                <td style="display:none;">
                    @Html.DisplayFor(modelItem => item.CabeceraId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Descripcion)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Estado)
                </td>

                <td>
                    <div class="text-center">
                        <div class="btn-group">
                            <button id="btnEditar" class="btn btn-outline-info btn-sm ml-3"><i class="fas fa-edit"></i></button>

                            <button id="btnEliminar" class="btn btn-outline-danger btn-sm ml-3"><i class="fas fa-trash-alt"></i></button>
                        </div>
                    </div>
                </td>
            </tr>
            }

        </tbody>

    </table>
</div>

@section scripts{
    <script src="~/JQuery/TablaIdioma.js"></script>
    <script src="~/JQuery/Cabecera.js"></script>

    @{

        if (@TempData["Mensaje"] != null)
        {
            <script>
                $(document).ready(function () {

                    $.notify("Agregado con exito", {
                        globalPosition: "top center",
                        className: "success"
                    });
                });
            </script>
        }

    }
}


