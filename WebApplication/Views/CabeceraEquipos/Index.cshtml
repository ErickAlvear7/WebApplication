@model IEnumerable<WebApplication.Models.CabeceraEquipos>

@{
    <title>@ViewBag.Title</title>
}



<div class="container">
    <div class="well well-lg">
        <a class="btn btn-outline-primary" href="/CabeceraEquipos/Create"><i class="fas fa-user-plus"></i></a>
    </div>
    <br/>

    <table id="tabla" class="table table-bordered table-hover">

        <thead class="text-center">
            <tr>
                <th>CabeceraId</th>
                <th>Parametro</th>
                <th>Descripcion</th>
                <th>Estado</th>
                <th>Opciones</th>
            </tr>

        </thead>

        <tbody class="text-center">

            @foreach (var item in Model)
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.id_cabecera)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.nombre_cabecera)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.descripcion_cabecera)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.estado_cabecera)
                </td>


                <td>
                    <button id="BtnEditar" class="btn btn-outline-info btn-sm ml-3"><i class="fas fa-edit"></i></button>


                    <button id="BtnEliminar" class="btn btn-outline-danger btn-sm ml-3"><i class="fas fa-trash-alt"></i></button>


                </td>
            </tr>
            }

        </tbody>

    </table>
</div>

@section scripts{
    <script src="~/JQuery/TablaIdioma.js"></script>
    <script src="~/JQuery/Cabecera.js"></script>

    @{

        if (@TempData["Mensaje"] != null)
        {
            <script>
                $(document).ready(function () {

                    $.notify("Agregado con exito", {
                        globalPosition: "top center",
                        className: "success"
                    });
                });
            </script>
        }

    }
}


