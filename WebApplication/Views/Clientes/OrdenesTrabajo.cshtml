
@{
    ViewBag.Title = "OrdenesTrabajo";
}

<div class="container">
    <form class="form-horizontal" role="form">
        <div class="form-group col-md-12">
            <div class="container">
                <div class="form-row">
                    <label for="prov" class="control-label col-md-2">Provincia:</label>
                    <div class="col-md-4">
                        @Html.DropDownList("Cliente", null, "--Seleccione Cliente--", htmlAttributes: new { @class = "form-control", @id = "DdlProvincia", @onchange = "FunGetCliente();" })
                    </div>
                </div>
                <br />
                <div class="table-responsive">
                    <table id="tblparameter" class="table table-striped table-border table-condensed" style="width: 100%;">
                        <thead class="text-center">
                            <tr>
                                <th>Provincia</th>
                                <th>Ciudad</th>
                                <th>Cliente</th>
                                <th>RUC</th>
                                <th>Estado</th>
                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>
                </div>

                <nav>
                    <div class="nav nav-tabs nav-fill" id="nav-tab" role="tablist">
                        <a class="nav-item nav-link active" id="nav-parametro-tab" data-toggle="tab" href="#nav-parametro" role="tab" aria-controls="nav-parametro" aria-selected="true">Orden de Trabajo</a>
                        <a class="nav-item nav-link" id="nav-detalle-tab" data-toggle="tab" href="#nav-detalle" role="tab" aria-controls="nav-detalle" aria-selected="false">Descripción Trabajo</a>
                    </div>
                </nav>
                <br><br>
                <div class="tab-content" id="nav-tabContent">
                    <div class="tab-pane fade show active" id="nav-parametro" role="tabpanel" aria-labelledby="nav-parametro-tab">
                        <div class="panel panel-default">
                            <div class="panel-body">
                                <div class="form-group">
                                    <label>Parámetro</label>
                                 
                                    <span id="error_parametro" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label>Descripción</label>
                                    <textarea name="descrip" id="TxtDescripcion" class="form-control" maxlength="255" onkeydown="return (event.keyCode!=13);"></textarea>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="tab-pane fade" id="nav-detalle" role="tabpanel" aria-labelledby="nav-detalle-tab">
                        <div class="panel panel-default">
                            <div class="panel-body">
                                <div align="right" style="margin-bottom:5px;">
                                    <button type="button" class="btn btn-outline-secondary" id="btnAdd"><i class='fas fa-plus'></i> Agregar</button>
                                </div>
                                <br />

                            </div>
                        </div>
                    </div>
                </div>
                <div align="center">
                    <button type="button" class="btn btn-outline-secondary" id="btnRegresar"><i class='fa fade-in-up'></i> Regresar</button>
                    <button type="button" class="btn btn-outline-primary" id="btnSave"><i class='fa fa-save'></i> Guardar</button>
                </div>
            </div>

        </div>
    </form>
</div>

