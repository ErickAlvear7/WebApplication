@model IEnumerable<WebApplication.Controllers.ConexionDTO.Catalogo>

@{
    Layout = Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Cliente";
}

<div class="well well-lg">
    <a class="btn btn-outline-primary" id="btnNuevo" data-toggle="modal" href="#myModal"><i class="fas fa-user-plus"></i></a>
</div>

<p>

</p>

<div class="container">

    <table id="tabla" class="table table-bordered table-hover">

        <thead class="text-center">
            <tr>
                <th>ClienteId</th>
                <th>Provincia</th>
                <th>Cuidad</th>
                <th>Cliente</th>
                <th>Direccion</th>
                <th>Estado</th>
                <th>Opciones</th>
            </tr>

        </thead>

        <tbody class="text-center">

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.ClienteId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Provincia)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.Cuidad)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Cliente)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.Direccion)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.Estado)
                    </td>

                    <td>
                        <button id="btnEquipo" class="btn btn-outline-info btn-sm ml-3"><i class="fas fa-wrench"></i></button>

                        <button id="btnEditar" class="btn btn-outline-info btn-sm ml-3"><i class="fas fa-edit"></i></button>

                        <button id="btnEliminar" class="btn btn-outline-danger btn-sm ml-3"><i class="fas fa-trash-alt"></i></button>


                    </td>
                </tr>
            }

        </tbody>

    </table>
</div>

@section scripts{
    <script src="~/JQuery/TablaIdioma.js"></script>
    <script src="~/JQuery/Clientes.js"></script>
  

    @{

        if (@TempData["Mensaje"] != null)
        {
            <script>
                $(document).ready(function () {

                    $.notify("Grabado con exito", {
                        globalPosition: "top center",
                        className: "success"
                    });
                });
            </script>
        }

    }
}