
@model IEnumerable<WebApplication.Controllers.ConexionDTO.OrdenesFinalizadas>
@{
    Layout = null;
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <br />

    <div class="container">
        <div class="row">
            <div class="form-inline col-md-12">
                <div class="table-responsive">
                    <table id="tblclientes" class="table table-striped table-border table-condensed" style="width: 100%;">
                        <thead class="text-center">
                            <tr>
                                <th>Trabajo Realizados</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                           @Html.DisplayFor(modelItem => item.TrabajosRealizados)
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <hr />
        <div class="row">
            <div class="form-inline col-md-12">
                <label for="Tipo" class="control-label col-md-2">Tipo Trabajo:</label>
                <div class="col-md-4">
                    @Html.Raw(@ViewBag.TipoTrabajo)
                </div>
                <label for="equipo" class="control-label col-md-2">Foto Equipo:</label>
                <div class="col-md-4">
                    <img src="@ViewBag.Imagen" width="200" height="200" />
                </div>
            </div>
        </div>
        <hr />

    </div>

}

