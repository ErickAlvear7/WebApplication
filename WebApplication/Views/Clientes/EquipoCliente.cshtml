@model IEnumerable<WebApplication.Controllers.ConexionDTO.Catalogo>

@{

}

<title>@ViewBag.titulo</title>


@using (Html.BeginForm())
{
    <div class="container">

        <form class="form-horizontal" role="form">
            <div class="form-row">
                <div class="col-md-12">
                    <table id="tabla" class="table table-bordered">

                        <thead class="text-center bg-info">
                            <tr>
                                <th>Cliente</th>
                                <th>Contacto</th>
                                <th>Telefono</th>
                                <th>Celular</th>
                            </tr>

                        </thead>

                        <tbody class="text-center">

                            @foreach (var item in Model)
                            {
                            <tr>

                                <td>
                                    @Html.DisplayFor(modelItem => item.Cliente)
                                </td>

                                <td>
                                    @Html.DisplayFor(modelItem => item.Contacto)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Telefono)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Celular)
                                </td>
                            </tr>
                            }

                        </tbody>

                    </table>

                </div>
            </div>
                     
            <br />
            
            <div id="accordion">
                <div class="card">
                    <div class="card-header" id="headingOne">
                        <h4 class="mb-0">

                            <span class="label label-primary" data-toggle="collapse" data-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne"><span style="color:blue">Equipo</span> <i class="fas fa-plus"></i></span>
                        </h4>
                    </div>

                    <div id="collapseOne" class="collapse" aria-labelledby="headingOne" data-parent="#accordion">
                        <div class="card-body">
                            <div class="panel panel-default">
                                <div class="panel-body">
                                    <div class="table">
                                        <div class="form-row">                                
                                            <div class="col-md-4">
                                                <input type="text" class="form-control" id="txtNombreEquipo" maxlength="100" placeholder="nombre del equipo" style="text-transform:uppercase;">
                                            </div>                                                  
                                        </div>
                                        <br/>
                                        <div class="form-row">
                                            <div class="col-md-4">
                                                @Html.DropDownList("grupo_equipo", null, "---Seleccione Grupo---", htmlAttributes: new { @class = "form-control", @id = "ddlGrupoEquipo", style = "Width:100%" })
                                            </div>
                                            <div class="col-md-4">
                                                @Html.DropDownList("marca_equipo", null, "---Seleccione Marca---", htmlAttributes: new { @class = "form-control", @id = "ddlGrupoEquipo", style = "Width:100%" })
                                            </div>
                                            <div class="col-md-4">
                                                @Html.DropDownList("modelo_equipo", null, "---Seleccione Modelo---", htmlAttributes: new { @class = "form-control", @id = "ddlGrupoEquipo", style = "Width:100%" })
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                   

                            </div>
                        </div>
                    </div>

                </div>
            </div>   
        </form>
        <br/>
    </div>
    <div class="container">
        <div class="btn-group btn-group-justified text-center">
            <div class="btn-group">
                <button type="button" id="btnRegresar" class="btn btn-primary">Regresar</button>
            </div>
            <div class="btn-group">
                <button type="button" id="btnGuardar" class="btn btn-outline-success">Guardar</button>
            </div>
        </div>

    </div>
}


@section scripts{
    <script src="~/JQuery/ClienteEquipo.js"></script>
    
}