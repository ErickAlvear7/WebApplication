@model WebApplication.Models.Perfiles

@{
    Layout = null;
}
    @using (Html.BeginForm()) 
    {
       <div class="container">
            <div class="row">
                 <div class="form-inline col-md-12">
                   <label for="perfil" class="control-label col-md-2">Perfil:</label>
                   <div class="col-md-5">
                   <input class="form-control" id="txtPerfil" onkeyup="this.value = this.value.replace(/[^aA-zZ]/g, '')" maxlength="50" placeholder="nombre del perfil" type="text"/>
                    </div>
                 </div>
            </div>
           <hr/>  
       </div>
    }
    
 

